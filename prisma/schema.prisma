generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Company {
  id              Int                @id @default(autoincrement())
  name            String
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  categories      Category[]
  items           Item[]
  transactions    PointTransaction[]
  users           User[]
  teams           Team[]
  branding        CompanyBranding?
  surveyResponses SurveyResponse[]
}

model User {
  id                 Int                @id @default(autoincrement())
  name               String
  email              String             @unique
  password           String
  role               UserRole
  companyId          Int?
  teamId             Int?
  points             Int                @default(0)
  username           String?            @unique @db.VarChar(50)
  profilePicture     String?            @db.VarChar(500)
  bio                String?            @db.VarChar(200)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  mustChangePassword Boolean            @default(false)
  resetCode          String?            @db.VarChar(6)
  resetCodeExpires   DateTime?
  elogiosDados       Elogio[]           @relation("ElogiosEnviados")
  elogios            Elogio[]           @relation("ElogiosRecebidos")
  notifications      Notification[]
  transactions       PointTransaction[]
  surveyResponses    SurveyResponse[]
  permissions        UserPermission[]
  company            Company?           @relation(fields: [companyId], references: [id])
  team               Team?              @relation("TeamMembers", fields: [teamId], references: [id])
  supervisingTeams   Team[]             @relation("TeamSupervisors")

  @@index([companyId])
  @@index([teamId])
  @@index([username])
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String
  companyId Int
  company   Company @relation(fields: [companyId], references: [id])
  items     Item[]

  @@index([companyId])
}

model Item {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   @db.VarChar(1000)
  imageUrl    String?   @db.VarChar(500)
  price       Int
  stock       Int
  companyId   Int
  categoryId  Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    Category? @relation(fields: [categoryId], references: [id])
  company     Company   @relation(fields: [companyId], references: [id])

  @@index([categoryId])
  @@index([companyId])
}

model PointTransaction {
  id          Int      @id @default(autoincrement())
  userId      Int
  companyId   Int
  amount      Int
  type        String
  createdAt   DateTime @default(now())
  description String?  @db.VarChar(500)
  adminName   String?
  company     Company  @relation(fields: [companyId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@index([companyId])
  @@index([userId, companyId])
}

model Elogio {
  id        Int      @id @default(autoincrement())
  message   String
  fromId    Int
  toId      Int
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  from      User     @relation("ElogiosEnviados", fields: [fromId], references: [id])
  to        User     @relation("ElogiosRecebidos", fields: [toId], references: [id])

  @@index([fromId])
  @@index([toId, createdAt])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum UserRole {
  SUPER_ADMIN
  COMPANY_ADMIN
  SUPERVISOR
  COLLABORATOR
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   @db.VarChar(500)
  companyId   Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  company     Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  members     User[]    @relation("TeamMembers")
  supervisors User[]    @relation("TeamSupervisors")

  @@index([companyId])
}

// White-label branding settings for each company
model CompanyBranding {
  id                Int       @id @default(autoincrement())
  companyId         Int       @unique
  logoUrl           String?   @db.VarChar(500)
  displayName       String?   @db.VarChar(100)
  primaryColor      String    @default("#026876")
  secondaryColor    String    @default("#03BBAF")
  accentColor       String    @default("#03A0A")
  sidebarColor      String    @default("#1F2937")
  sidebarTextColor  String    @default("#FFFFFF")
  buttonStyle       String    @default("rounded") // rounded, square, pill
  fontFamily        String    @default("Inter")
  customCss         String?   @db.Text
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  company           Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

// Survey system for logout feedback
enum SurveyType {
  QUANTITATIVE     // Escala numérica (1-10)
  SATISFACTION     // Emoticons/estrelas
  HEATMAP          // Clique em áreas da interface
}

model Survey {
  id          Int              @id @default(autoincrement())
  type        SurveyType
  question    String           @db.VarChar(500)
  options     String?          @db.Text // JSON com opções específicas
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  responses   SurveyResponse[]
}

model SurveyResponse {
  id          Int      @id @default(autoincrement())
  surveyId    Int
  userId      Int
  companyId   Int
  response    String   @db.Text // JSON com a resposta
  createdAt   DateTime @default(now())
  survey      Survey   @relation(fields: [surveyId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([surveyId, userId])
  @@index([surveyId])
  @@index([userId])
  @@index([companyId])
}

// Modelo de permissões customizáveis para supervisores
model UserPermission {
  id        Int      @id @default(autoincrement())
  userId    Int
  permission String  @db.VarChar(100) // Nome da permissão (ex: "view_users", "edit_team_members")
  value     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, permission])
  @@index([userId])
}
