generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Company {
  id           Int                @id @default(autoincrement())
  name         String
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  categories   Category[]
  items        Item[]
  transactions PointTransaction[]
  users        User[]
}

model User {
  id                 Int                @id @default(autoincrement())
  name               String
  email              String             @unique
  password           String
  role               UserRole
  companyId          Int?
  points             Int                @default(0)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  mustChangePassword Boolean            @default(false)
  elogiosDados       Elogio[]           @relation("ElogiosEnviados")
  elogios            Elogio[]           @relation("ElogiosRecebidos")
  notifications      Notification[]
  transactions       PointTransaction[]
  company            Company?           @relation(fields: [companyId], references: [id])

  @@index([companyId], map: "User_companyId_fkey")
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String
  companyId Int
  company   Company @relation(fields: [companyId], references: [id])
  items     Item[]

  @@index([companyId], map: "Category_companyId_fkey")
}

model Item {
  id         Int       @id @default(autoincrement())
  name       String
  price      Int
  stock      Int
  companyId  Int
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])
  company    Company   @relation(fields: [companyId], references: [id])

  @@index([categoryId], map: "Item_categoryId_fkey")
  @@index([companyId], map: "Item_companyId_fkey")
}

model PointTransaction {
  id          Int      @id @default(autoincrement())
  userId      Int
  companyId   Int
  amount      Int
  type        String
  createdAt   DateTime @default(now())
  description String?  @db.VarChar(500)
  adminName   String?
  company     Company  @relation(fields: [companyId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@index([companyId], map: "PointTransaction_companyId_fkey")
  @@index([userId, companyId], map: "idx_pointtransaction_user_company")
}

model Elogio {
  id        Int      @id @default(autoincrement())
  message   String
  fromId    Int
  toId      Int
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  from      User     @relation("ElogiosEnviados", fields: [fromId], references: [id])
  to        User     @relation("ElogiosRecebidos", fields: [toId], references: [id])

  @@index([fromId], map: "Elogio_fromId_fkey")
  @@index([toId, createdAt], map: "idx_elogio_to_created")
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Notification_userId_fkey")
}

enum UserRole {
  SUPER_ADMIN
  COMPANY_ADMIN
  COLLABORATOR
}
